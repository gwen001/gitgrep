<form id="search-form">
    <input type="hidden" id="page" name="page" value="1">
    <div class="row">
        <div class="col-6">
            <label for="search-filter">Search for:</label>
            <input type="text" class="form-control" id="search-filter" name="search_filter" placeholder="filename:wp-config.php" value="filename:wp-config.php" required>
            <div class="search-tip">need help with filters? check <a href="https://help.github.com/en/github/searching-for-information-on-github/searching-code" target="_blank">GitHub documentation</a></div>
        </div>
        <div class="col-6">
            <label for="search-regexp">Regexp:</label>
            <input type="text" class="form-control" id="search-regexp" name="search_regexp" placeholder="DB_PASSWORD',\s*'[^']{4,}" value="DB_PASSWORD',\s*'[^']{4,}" required>
            <div class="search-tip">need help with regexp? check <a href="https://www.w3schools.com/jsref/jsref_obj_regexp.asp" target="_blank">w3schools documentation</a></div>
        </div>
    </div>
    <div class="p-2"></div>
    <div class="row">
        <div class="col text-center">
            <button type="button" id="btn-search" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<div class="p-5"></div>

<div class="row">
    <div class="col-12">
        <div id="results-container">
        </div>
        <div id="result-error" class="d-none alert alert-warning text-center" role="alert">
        </div>
        <div class="d-flex justify-content-center">
            <button type="button" id="btn-more" class="d-none btn btn-light">Give me more!</button>
        </div>
        <div class="d-flex justify-content-center">
            <div id="search-spinner" class="spinner-border text-danger d-none" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</div>

<div class="p-5"></div>

<div id="result-template" class="row result-single d-none">
    <div class="col-12">
        <a href="" class="link-owner" target="_blank"><img class="owner-avatar" src="" width="20" height="20"></a>
        <a href="" class="link-repo" target="_blank"></a>
    </div>
    <div class="col-12">
        <a href="" class="link-file" target="_blank"></a> -
        <a href="" class="link-rawfile" target="_blank">view raw</a>
    </div>
    <div class="col-12 code"></div>
</div>
